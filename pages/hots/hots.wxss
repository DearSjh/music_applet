.search {
	padding:0px 0px;
  margin:0px auto;
}

input,button {
	border:none;
	outline:none;
}
input {
	width:100%;
	height:35px;
	padding-left:13px;
}
button {
	height:35px;
	width:42px;
	position:absolute;
}
.bar6 input {
	border:1px solid #d80000;
	/* border-radius:5px; */
	background:transparent;
	top:0;
	right:0;
}
.bar6 button {
	background:#d80000;
	border-radius:0 0px 0px 0;
	width:60px;
	top:1px;
	right:0;
}
.bar6 button:before {
	content:"Search";
  margin-left: -5px;
  margin-top: 0px;
	font-size:14px;
	color:#F9F0DA;
}

